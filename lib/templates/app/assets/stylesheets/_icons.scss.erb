@font-face {
  font-family: 'icomoon';
  src: font-url('icomoon.ttf') format('truetype'),
       font-url('icomoon.woff') format('woff'),
       font-url('icomoon.svg#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

@mixin icon-style {
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'icomoon' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  display: inline-flex;
  align-items: center;
  justify-content: center;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

a.<%= project_classnames_prefix %>-ico {
  @include plain-hover-focus {
    text-decoration: none;
  }
}

.<%= project_classnames_prefix %>-ico {
  @include icon-style;
}

.<%= project_classnames_prefix %>-ico--14 {
  font-size: 14px;
}

.<%= project_classnames_prefix %>-ico--18 {
  font-size: 18px;
}

.<%= project_classnames_prefix %>-ico--20 {
  font-size: 20px;
}

@import 'icons/data';
