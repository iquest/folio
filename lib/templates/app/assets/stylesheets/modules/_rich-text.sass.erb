.<%= project_classnames_prefix %>-rich-text
  margin-bottom: 0

  video
    width: 100%

  img
    max-width: 100%

  p, figure, ul, ol
    margin: 0 0 $spacer

  &.small
    p, figure, ul, ol
      margin: 0 0 $spacer / 2

  figcaption
    +font-size-sm
    color: $gray-500
    margin-top: $spacer

  ul,
  ol
    margin-left: 0
    padding-left: 0.9rem

    > li
      padding-left: 0.5rem

      & + li
        margin-top: 0.5rem

  ul
    margin-left: 1.1rem

    > li
      list-style: disc

  a:not(.btn)
    text-decoration: underline
    text-decoration-color: $primary
    color: $black

    +hover-focus
      text-decoration: none

  table
    +font-size-sm
    width: 100%
    margin: 2 * $spacer 0

    th, td
      padding: 1rem
      border-bottom: 1px solid $hr-border-color

      &:first-child
        padding-left: 0

      &:last-child
        padding-right: 0

    p
      &:last-child
        margin-bottom: 0

  &--max-width
    max-width: 850px

  .folio-redactor-button
    margin: $grid-gutter-width 0

    + br
      display: none

    a
      @extend .btn
      @extend .btn-primary
      color: $gray-100 !important
