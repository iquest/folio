.<%= project_classnames_prefix %>-atom,
.<%= project_classnames_prefix %>-molecule,
.<%= project_classnames_prefix %>-atom-spaced
  margin-top: map-get($spacers, a)
  margin-bottom: map-get($spacers, a)

  +media-breakpoint-down(md)
    margin-top: map-get($spacers, ma)
    margin-bottom: map-get($spacers, ma)

.<%= project_classnames_prefix %>-atom--padded
  padding-top: map-get($spacers, a)
  padding-bottom: map-get($spacers, a)

  +media-breakpoint-down(md)
    padding-top: map-get($spacers, ma)
    padding-bottom: map-get($spacers, ma)

.<%= project_classnames_prefix %>-atom,
.<%= project_classnames_prefix %>-molecule
  position: relative
  z-index: 1

.f-c-atoms-previews__insert-hint
  margin-top: map-get($spacers, a) / 2

  +media-breakpoint-down(md)
    margin-top: map-get($spacers, ma) / 2

= rm-atom-margin($direction)
  margin-#{$direction}: -1 * map-get($spacers, a)

  +media-breakpoint-down(md)
    margin-#{$direction}: -1 * map-get($spacers, ma)
