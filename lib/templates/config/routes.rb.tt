# frozen_string_literal: true

Rails.application.routes.draw do
  root to: 'home#index'

  mount Folio::Engine => '/'

  get '/400', to: 'folio/errors#page400', via: :all
  get '/404', to: 'folio/errors#page404', via: :all
  get '/422', to: 'folio/errors#page422', via: :all
  get '/500', to: 'folio/errors#page500', via: :all

  scope '/:locale', locale: /#{I18n.available_locales.join('|')}/ do
    get '/*path', to: 'pages#show', as: 'page'
  end
end
