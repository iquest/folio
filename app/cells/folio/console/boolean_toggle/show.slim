div class=class_name
  .custom-control.custom-switch.f-c-boolean-toggle__switch
    input.f-c-boolean-toggle__input.custom-control-input[
      type="checkbox"
      id=id
      checked=input_checked?
      name=name
      data-url=url
    ]
    label.f-c-boolean-toggle__label.custom-control-label[
      for=id
    ]
      span = input_label
