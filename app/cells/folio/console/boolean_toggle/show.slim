.f-c-boolean-toggle data-boolean-toggle=url
  .f-c-boolean-toggle__switch[
    class="custom-control"
    class="custom-switch"
  ]
    input.f-c-boolean-toggle__input[
      type="checkbox"
      name=attr_name
      checked=value
      class="custom-control-input"
      id=id
    ]

    label[
      class="custom-control-label"
      for=id
    ]
