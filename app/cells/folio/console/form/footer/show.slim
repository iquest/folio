div class=class_name
  .container-fluid.d-flex.align-items-center
    - if back_path
      = link_to back_path, class: 'btn btn-outline mr-2 f-c-form-footer__btn'
        i.fa.fa-undo
        = t('folio.console.actions.cancel')

    = model.button :submit, \
                   t('folio.console.actions.submit'), \
                   class: 'f-c-form-footer__btn f-c-form-footer__btn--submit '\
                          'mr-2'

    .f-c-form-footer__ribbon.text-danger.f-c-with-icon
      span.mi.f-c-form-footer__ribbon-icon warning
      span = t('.dirty_forms')
