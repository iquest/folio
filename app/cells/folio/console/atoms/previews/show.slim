.f-c-atoms-previews
  - model.keys.each_with_index do |locale, index|
    - I18n.with_locale(locale)
      .f-c-atoms-previews__locale data-locale=locale hidden=(index != 0)
        - model[locale].each do |atom|
          .f-c-atoms-previews__atom
            == cell(atom.class.cell_name, \
                    atom, \
                    atom.cell_options.presence || {})

            .f-c-atoms-previews__controls
              .f-c-atoms-previews__buttons
                button.fa.fa-pencil-alt[
                  type="button"
                  class="f-c-atoms-previews__button"
                  class="f-c-atoms-previews__button--edit"
                ]
                button.fa.fa-arrow-up[
                  type="button"
                  class="f-c-atoms-previews__button"
                  class="f-c-atoms-previews__button--arrow"
                  class="f-c-atoms-previews__button--arrow-up"
                ]
                button.fa.fa-arrow-down[
                  type="button"
                  class="f-c-atoms-previews__button"
                  class="f-c-atoms-previews__button--arrow"
                  class="f-c-atoms-previews__button--arrow-down"
                ]
                button.fa.fa-trash[
                  type="button"
                  class="f-c-atoms-previews__button"
                  class="f-c-atoms-previews__button--remove"
                ]
