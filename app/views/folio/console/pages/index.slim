= index_header

= catalogue(@catalogue_model, @catalogue_options)
  ruby:
    edit_link :title
    locale_flag if Rails.application.config.folio_pages_translations
    type
    featured_toggle
    published_toggle
    date(:published_at)

    if record.is_a?(Folio::Page)
      if record.nested_page_path
        if controller.main_app.respond_to?(:page_path)
          preview_url = controller.main_app.page_path(record.nested_page_path)
        else
          preview_url = nil
        end
      else
        preview_url = url_for(record)
      end
    else
      preview_url = nil
    end

    actions({ preview: preview_url }, :edit, :destroy)

    transportable_dropdown
