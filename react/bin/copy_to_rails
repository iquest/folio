#!/bin/bash

GREEN='\033[0;32m'
NO_COLOR='\033[0m'
rootDir="$( dirname "$0" )/../.."

(
  cd "$rootDir/react" || exit

  target=../app/assets/javascripts/folio/console/react.js
  touch $target
  echo '' > $target

  for file in build/static/js/*.js; do
    cat $file >> $target
    echo -e "\n" >> $target
  done

  sed -i '/\/\/# sourceMappingURL/d' $target

  echo -e "${GREEN}Copied build to rails assets folder. $NO_COLOR\n"
)
